<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.PostMapper">
    <resultMap id="PostResultMap" type="com.example.domain.Post">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="author" column="author"/>
        <result property="date" column="date"/>
        <result property="views" column="views"/>
        <result property="content" column="content"/>
    </resultMap>

    <select id="findAll" resultMap="PostResultMap">
        SELECT * FROM posts
    </select>

    <select id="findById" parameterType="long" resultMap="PostResultMap">
        SELECT * FROM posts WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.example.domain.Post">
        INSERT INTO posts (title, author, date, views, content)
        VALUES (#{title}, #{author}, #{date}, #{views}, #{content})
    </insert>

    <select id="findPostsByPage" resultType="com.example.domain.Post">
        SELECT * FROM posts ORDER BY id DESC LIMIT #{pageSize} OFFSET #{offset}
    </select>

    <select id="countPosts" resultType="int">
        SELECT COUNT(*) FROM posts
    </select>

</mapper>